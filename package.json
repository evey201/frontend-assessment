{
  "name": "frontend-assessment",
  "version": "1.0.0",
  "private": true,
  "engines": {
    "node": ">=18 <21"
  },
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "sim": "node simulator/index.js --devices 2000 --eps 1200 --dupRate 0.01 --oooRate 0.01 --dropConnEvery 60s",
    "dev:all": "concurrently -k -n NEXT,SIM \"npm:dev\" \"npm:sim\"",
    "lint": "eslint . --ext .ts,.tsx",
    "typecheck": "tsc --noEmit",
    "test": "vitest run",
    "test:watch": "vitest"
  },
  "dependencies": {
    "next": "^15.0.0",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "react-virtuoso": "^4.14.0",
    "zustand": "^4.5.5"
  },
  "devDependencies": {
    "@testing-library/jest-dom": "^6.5.0",
    "@testing-library/react": "^16.0.0",
    "@testing-library/user-event": "^14.5.2",
    "@types/node": "^22.5.0",
    "@types/react": "19.1.10",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.0.1",
    "cors": "^2.8.5",
    "eslint": "^9.9.0",
    "eslint-config-next": "^15.0.0",
    "express": "^4.19.2",
    "jsdom": "^24.1.0",
    "minimist": "^1.2.8",
    "postcss": "^8.4.41",
    "tailwindcss": "^3.4.10",
    "typescript": "^5.5.4",
    "vitest": "^2.0.5",
    "ws": "^8.18.0"
  }
}
